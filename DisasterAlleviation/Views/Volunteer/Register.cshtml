@model DisasterAlleviationFoundation.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer Registration";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-blue-600 mb-6">Volunteer Registration</h2>

        <form asp-action="Register" method="post" class="space-y-4">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Name" class="w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200" required />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" type="password" class="w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200" required />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label class="inline-flex items-center">
                    <input asp-for="IsRegistered" type="checkbox" class="text-blue-600 rounded" />
                    <span class="ml-2 text-gray-600">Confirm Registration</span>
                </label>
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700">
                Register
            </button>
        </form>

        <p class="text-center text-gray-600 mt-4">
            Already registered? <a href="/Volunteer/Login" class="text-blue-600 hover:underline">Login here</a>
        </p>
    </div>
</div>
