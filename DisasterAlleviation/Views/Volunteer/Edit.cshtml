@model DisasterAlleviationFoundation.Models.Volunteer

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="max-w-xl mx-auto bg-white shadow-lg rounded-2xl p-8 mt-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Edit Profile</h2>

    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Name" class="mt-1 block w-full rounded-lg border-gray-300 p-2 shadow-sm" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" type="password"
                   class="mt-1 block w-full rounded-lg border-gray-300 p-2 shadow-sm" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex items-center">
            <input asp-for="IsRegistered" type="checkbox" class="mr-2" />
            <label asp-for="IsRegistered" class="text-gray-700"></label>
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700 transition">
            Save Changes
        </button>
    </form>
</div>
