@model DisasterAlleviationFoundation.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer Login";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-green-600 mb-6">Volunteer Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-100 text-red-600 p-2 rounded mb-4">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text" name="name" class="w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-green-200" required />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" name="password" class="w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-green-200" required />
            </div>
            <button type="submit" class="w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700">
                Login
            </button>
        </form>
    </div>
</div>
 