@model IEnumerable<DisasterAlleviationFoundation.Models.Incident>
@{
    ViewData["Title"] = "Incidents";
}

<div class="max-w-4xl mx-auto mt-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Reported Incidents</h2>

    <table class="w-full border-collapse border border-gray-300 shadow-lg rounded-lg">
        <thead class="bg-gray-200">
            <tr>
                <th class="p-3 border">Title</th>
                <th class="p-3 border">Description</th>
                <th class="p-3 border">Location</th>
                <th class="p-3 border">Date Reported</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var incident in Model)
            {
                <tr class="hover:bg-gray-100">
                    <td class="p-3 border">@incident.Title</td>
                    <td class="p-3 border">@incident.Description</td>
                    <td class="p-3 border">@incident.Location</td>
                    <td class="p-3 border">@incident.DateReported.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
