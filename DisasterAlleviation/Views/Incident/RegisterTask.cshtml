@{
    ViewData["Title"] = "Register Task";
}

<h2>Register for Task</h2>

@if (ViewBag.Error != null)
{
    <div class="bg-red-100 text-red-700 p-2 mb-4">@ViewBag.Error</div>
}

<form asp-action="RegisterTask" method="post">
    <input type="hidden" name="volunteerName" value="@ViewBag.VolunteerName" />

    <label>Choose Task</label>
    <select name="incidentTitle" class="border p-2 rounded w-full">
        <option value="">Select an Incident</option>
        @foreach (var option in ViewBag.IncidentOptions)
        {
            <option>@option</option>
        }
    </select>

    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded mt-2">Register</button>
</form>
