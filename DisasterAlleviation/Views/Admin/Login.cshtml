@{
    ViewData["Title"] = "Admin Login";
    Layout = "_Layout";
}

<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md mt-16">
    <h2 class="text-2xl font-bold mb-4">Admin Login</h2>

    @if (ViewBag.Error != null)
    {
        <div class="bg-red-100 text-red-700 p-2 rounded mb-4">@ViewBag.Error</div>
    }

    <form asp-action="Login" method="post" class="space-y-4">
        <div>
            <label class="block font-medium">Username</label>
            <input type="text" name="username" class="w-full border p-2 rounded" required />
        </div>
        <div>
            <label class="block font-medium">Password</label>
            <input type="password" name="password" class="w-full border p-2 rounded" required />
        </div>
        <button type="submit" class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700 transition">
            Login
        </button>
    </form>
</div>
